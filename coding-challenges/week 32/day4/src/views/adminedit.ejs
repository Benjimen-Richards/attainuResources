        <hr />
        <div class="row">
            <div class="offset-md-2 col-md-5">
                <form action="/admineditput/<%=data._id%>"" method=" POST">
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">Name</label>
                        <input type="text" name="name" value="<%=data.name%>" class="form-control" id="name"
