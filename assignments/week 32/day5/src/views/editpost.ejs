<body>

    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <ul class="nav navbar-nav">
                <li class="active"><a href="/post">Home</a></li>
                <%if(userdata.role=="Admin"){%>
                    <li><a href="/post/admin">
                            <%=userdata.role%>
                        </a></li>
                    <%}%>
                        <li><a href="/post/addpost">Add post</a></li>
                        <li><a href="/login/logout">Logout</a></li>
            </ul>
        </div>
    </nav>
    <hr />
    <h2>Edit post</h2>
    <hr />
    <div class="row">
        <form class="col-lg-offset-1 col-md-5" action="/post/editpost/<%=data._id%>" method="POST">
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">
                    Title
                </label>
                <input type="text" class="form-control" name="title" id="exampleInputEmail1"
                    aria-describedby="emailHelp" value="<%=data.title%>">
            </div> <br />
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">
                    Description
                </label>
                <input type="text4" name="description" value="<%=data.description%>" class="form-control"
                    id="exampleInputPassword1">
            </div>
            <br />
            <div>
                <label class="form-label">Tags</label>
                <select name="tags">
                    <option value="javascript">javascript</option>
                    <option value="React">React</option>
                    <option value="html">html</option>
                    <option value="Nodejs">Nodejs</option>
                </select>
            </div>
            <br />
            <div>
                <button type="submit" class="btn btn-primary">Submit</button>
                <a href="/post"><button class="btn btn-danger">Cancel</button> </a>
            </div>
        </form>
    </div>

    </div>

</body>

